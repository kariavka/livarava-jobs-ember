{{common-header}}

<div class="jobs">

  <div class="container mt-5">

    <div class="row">
      <div class="col-12 col-sm-12 col-md-10 offset-md-1">

        <div class="card">

          <div class="card-header">
            <div class="row">
              <div class="col-10">
                <h3>Jobs</h3>
              </div>
              <div class="col-2">
                {{#link-to "create" class="btn btn-primary pull-right"}}
                  <i class="fa fa-plus"></i>
                {{/link-to}}
              </div>
            </div>
          </div>

          <div class="card-body">
            <table class="table">
              <tbody>
              {{#each model.items as |item|}}
                <tr>
                  <td>{{input type="checkbox"}}</td>
                  <td><i class="fa fa-star"></i></td>
                  <td>
                    {{#link-to "edit" item.id}}
                      {{{item.title}}}
                    {{/link-to}}
                  </td>
                  <td class="text-right">
                    <span class="small">
                      {{moment-format item.created 'MMMM D, YYYY'}}
                    </span>
                  </td>
                </tr>
              {{/each}}
              </tbody>
            </table>
          </div>

        </div>

      </div>
    </div>
  </div>

</div>
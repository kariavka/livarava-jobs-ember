{{common-header}}

<div class="jobs pt-5 pb-5">

  <div class="container">

    <div class="row">
      <div class="col-12 col-sm-12 col-md-10 offset-md-1">

        <div class="card">

          <div class="card-header">
            <div class="row">
              <div class="col-10">
                <h3>Jobs</h3>
              </div>
              <div class="col-2">
                {{#link-to "create" class="btn btn-primary pull-right"}}
                  <i class="fa fa-plus"></i>
                {{/link-to}}
              </div>
            </div>
          </div>

          <div class="card-body">

            {{#if model.items}}
              <table class="table">
                <tbody>
                {{#each model.items as |item|}}
                  <tr>
                    <td>
                      <div class="row">
                        <div class="col-7">
                          {{#link-to "edit" item.id}}
                            {{{item.title}}}
                          {{/link-to}}
                        </div>
                        <div class="col-2">
                          {{display-icon item=item}}
                        </div>
                        <div class="col-1">
                          {{featured-icon item=item}}
                        </div>
                        <div class="col-2 text-right">
                        <span class="small">
                          {{moment-format item.created 'MMMM D, YYYY'}}
                        </span>
                        </div>
                      </div>
                    </td>
                  </tr>
                {{/each}}
                </tbody>
              </table>
            {{else}}
              <div class="alert alert-info">
                No jobs yet.
              </div>
            {{/if}}

          </div>

        </div>

      </div>
    </div>
  </div>

</div>

{{common-footer}}
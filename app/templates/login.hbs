<div class="container mt-3">

  <div class="row">
    <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 text-center">

      <div class="row mb-4">
        <div class="col-6 offset-3">
          <img src="/admin/img/logo-horizontal.svg" class="img img-fluid">
        </div>
      </div>

      <form class="form" {{action "signin" on="submit"}}>
        <div class="field">
          <label>Login</label>
          {{input class="form-control" value=email}}
        </div>

        <div class="field mt-3">
          <label>Password</label>
          {{input class="form-control" value=password type="password"}}
        </div>

        <button type="submit"
                class="mt-3 btn btn-primary btn-signin {{if isLoading 'disabled'}}"
                disabled="{{if isLoading 'disabled'}}">
          {{#if isLoading}}
            <i class="fa fa-spin fa-spinner"></i> Please, wait...
          {{else}}
            Sign in
          {{/if}}
        </button>
      </form>
    </div>
  </div>
</div>